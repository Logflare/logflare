              <%= live_render(@conn, LogflareWeb.GlobalLogMetricsLV) %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-1"></div>
    </div>

    <% # dashboard example %>
    <div class="row paragraph">
      <div class="col-lg-10 order-lg-1">
        <div class="row">
          <div class="col-md-6">
          </div>
          <div class="col-md-6">
            <h4>Track everything you want</h4>
